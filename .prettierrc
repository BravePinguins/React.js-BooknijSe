{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "printWidth": 80,
  "quoteProps": "as-needed",
  "bracketSpacing": true,
  "arrowParens": "always",
  "useTabs": false,
  "importOrder": [
    "react",
    "<THIRD_PARTY_MODULES>",
    "^@/styles/(.*)$",
    "^@/assets/(.*)$",
    "^@/(.*)$",
    "^@/layouts/(.*)$",
    "^@/components/(.*)$",
    "^[./]",
    "^[../]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "tailwindConfig": "./tailwind.config.js",
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
